{
    "manifest_version": 3,
    "name": "Crucible Wallet Extension",
    "version": "1.0",
    "description": "A browser extension for managing Crucible wallets.",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  